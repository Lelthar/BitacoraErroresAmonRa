
<div class="container">
  <h1>Errores</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Código</th>
      <th>Autor</th>
      <th>Fecha de publicación</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @programming_errors.each do |programming_error| %>
      <tr>
        <td><%= link_to programming_error.title, programming_error %></td> 
        <td><%= programming_error.code %></td>
        <td><%= programming_error.user.nick_name %></td>
        <td><%= programming_error.created_at.in_time_zone("Central America").to_s(:long)%></td>
        <% if current_user.tipo == "administrador"%>
          <td><%= link_to 'Edit', edit_programming_error_path(programming_error) %></td>
          <td><%= link_to 'Destroy', programming_error, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Error', new_programming_error_path%>

<%= link_to 'Generar pdf', "/information_error/generate_pdf/", method: :post , data: { confirm: 'Are you sure?'} %>
</div>

