<% if current_user.tipo == "administrador" %>
<div class="container">
  <h1>Usuarios</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Nickname</th>
        <th>Correo</th>
        <th>Tipo</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.nick_name %></td>
          <td><%= user.email %></td>
          <td><%= user.tipo %></td>
          <td><%= link_to 'Editar', "/data_users/"+(user.id.to_s)+"/edit", method: :get  %></td>
          <td><%= link_to 'Destruir', "/data_users/"+user.id.to_s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New User', data_users_new_path %>
  <br>
<% else %>

<% end %>
</div>
  

